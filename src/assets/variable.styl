$height = 1.2rem
$color = #00bcd4
$bor-color = #ddd
$ellipsis(){
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
}
$city-styl(w, before, after)
	.box 
		font-size .4rem
		.title 
			height 1rem
			line-height 1rem
			text-align left
			padding-left .5rem
		if before
			.list::before
				content: ''
				position absolute
				width 33.33%
				left 33.33%
				height 100%
				border-left 1px solid $bor-color
				border-right 1px solid $bor-color
		if after
			.list::after
				content: ''
				position absolute
				width 33.33%
				left 33.33%
				height 100%
				border-left 1px solid $bor-color
				border-right 1px solid $bor-color
		.list 
			position relative
			display flex
			flex-wrap wrap
			background #fff
			.item
				width 33.33%
				height 1.3rem
				line-height 1.3rem
				border-bottom 1px solid $bor-color
